{
  "name": "@mattermost/react-native-paste-input",
  "version": "0.8.0",
  "description": "React Native TextInput replacement to allow pasting files",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-paste-input.podspec",
    "!lib/typescript/example",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!example",
    "!.vscode",
    "!**/.idea",
    "!**/.gradle",
    "!android/build",
    "!ios/Build",
    ".circleci"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build && husky install",
    "release": "release-it",
    "example": "cd example && npm",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "npm run example i && npm run pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "paste",
    "text-input"
  ],
  "repository": "https://github.com/mattermost/react-native-paste-input",
  "author": "Elias Nahum <nahumhbl@gmail.com> (https://github.com/mattermost)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattermost/react-native-paste-input/issues"
  },
  "homepage": "https://github.com/mattermost/react-native-paste-input#readme",
  "dependencies": {
    "semver": "7.6.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "19.2.2",
    "@react-native/eslint-config": "0.75.3",
    "@react-native/metro-config": "0.75.3",
    "@react-native/typescript-config": "0.74.81",
    "@release-it/conventional-changelog": "8.0.1",
    "@types/react": "18.2.38",
    "@typescript-eslint/eslint-plugin": "7.7.1",
    "@typescript-eslint/parser": "7.7.1",
    "commitlint": "19.3.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-jest": "28.2.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-native": "4.1.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "pod-install": "0.2.0",
    "prettier": "3.2.5",
    "react": "18.2.0",
    "react-native": "0.75.3",
    "react-native-builder-bob": "0.23.2",
    "release-it": "17.2.1",
    "typescript": "5.4.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits"
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 4,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "codegenConfig": {
    "name": "PasteTextInputSpecs",
    "type": "components",
    "jsSrcsDir": "./src",
    "outputDir": {
      "ios": "./ios",
      "android": "./android/src/main"
    },
    "android": {
      "javaPackageName": "com.mattermost.pastetextinput"
    }
  }
}
